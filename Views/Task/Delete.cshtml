@model Todo.Models.TaskModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="display-4">Delete task</h1>

<h3>Are you sure you want to delete this task?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TaskName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TaskName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TaskDesc)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TaskDesc)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-dark" asp-action="Index">Back to tasks</a>
    </form>
</div>
